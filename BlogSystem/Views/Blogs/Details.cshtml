@model BlogSystem.Domain.Models.Blog

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">Details</h2>
<hr class="w-25" />

<div>
    <div class="blog">
        <h2>@Model.Title</h2>
        <p>@Model.Content</p>
        @if (Model.Comments != null && Model.Comments.Count > 0)
        {
            <h5>Comments :</h5>
            <ul>
                @foreach (var comment in Model.Comments)
                {
                    <li>@comment.Content (Comment ID: @comment.Id)</li>
                }
            </ul>
        }
        else
        {
            <p>No comments for this blog.</p>
        }
    </div>
</div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-sm btn-success">Back to List</a>
</div>
